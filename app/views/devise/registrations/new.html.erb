<% provide :title, "新規登録" %>
<% provide :button, "プロフィールを作成！" %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render 'layouts/guest_sign_in' %>
    <div class="page-body">
      <div class="lock-head">
        アカウントを登録
      </div> 
      <div class="lock-body">

        <%= f.label :name, 'ユーザーネーム', class: 'label' %>
        <%= f.text_field :name, {autofocus: true, autocomplete: '名前', class: 'form-control placeholder-no-fix', placeholder: '山田 太郎'} %>

        <%= f.label :email, 'メールアドレス', class: 'label' %>
        <%= f.email_field :email, {class: 'form-control placeholder-no-fix', placeholder: 'email@example.com'} %>

        <%= f.label :password, 'パスワード', class: 'label' %>
        <%= f.password_field :password, {class: 'form-control placeholder-no-fix', placeholder: '6文字以上', disable: true} %>
        
        <%= f.label :password_confirmation, 'パスワード（確認用）', class: 'label' %>
        <%= f.password_field :password_confirmation, {class: 'form-control placeholder-no-fix', placeholder:  '6文字以上', disable: true} %>

        <%= f.label :image, 'プロフィール画像', class: 'label' %>
        <div class="img">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar.form.url, class: "img" %>
          <% else %>
            <%= image_tag "/assets/default.jpg", :size => '120x120', class: "img" %>
          <% end %>
        </div>
        <%= f.file_field :avatar, class: 'form-control placeholder-no-fix' %>

      </div>
      <div class="lock-bottom">
        <%= f.submit yield(:button), class: "btn btn-success placeholder-no-fix" %>
      </div>
    </di>
  </div>
</div>

<% end %>